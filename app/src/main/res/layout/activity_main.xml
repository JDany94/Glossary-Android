<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoActivity"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_Logo"
        android:layout_width="163dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/iv_Descripcion"
        app:srcCompat="@drawable/libro" />

    <TextView
        android:id="@+id/tv_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_Logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scrollbarSize="4dp"
        android:text="@string/tv_Titulo"
        android:textColor="@color/tvTitulos"
        android:textSize="24sp"
        app:fontFamily="monospace" />

    <Button
        android:id="@+id/Boton_Diccionario"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/tv_Titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_small"
        android:onClick="BotonDiccionario"
        android:text="@string/boton_Vocabulary"
        android:textSize="18sp"
        app:fontFamily="monospace" />

    <Button
        android:id="@+id/Boton_ModificarDicc"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/Boton_Diccionario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_small"
        android:onClick="BotonAgregar"
        android:text="@string/boton_Add"
        android:textSize="18sp"
        app:fontFamily="monospace" />

    <Button
        android:id="@+id/Boton_Buscar"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/Boton_ModificarDicc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_small"
        android:text="@string/boton_Search"
        android:textSize="18sp"
        app:fontFamily="monospace" />

    <Button
        android:id="@+id/Boton_Links"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/Boton_Buscar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_small"
        android:text="@string/boton_Links"
        android:textSize="18sp"
        app:fontFamily="monospace" />

    <ImageButton
        android:id="@+id/BotonVolverMain"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_small"
        android:contentDescription="@string/Boton"
        android:onClick="BotonVolver"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/volver" />

</RelativeLayout>